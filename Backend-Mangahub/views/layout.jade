doctype html
html
  head
    title MangaHub
    meta(name='viewport', content='width=device-width')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    //font Error page
    link(href='https://fonts.googleapis.com/css?family=Raleway:200,400', rel='stylesheet')

    // jQuery library
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')

    // Latest compiled JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    // CSS sheets
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
      nav.navbar.navbar-default.material-shadow
          .container-fluid
              .navbar-header
                  button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navibar')
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar
                  a.navbar-brand(href='/') MangaHub
              #navibar.collapse.navbar-collapse
                  ul.nav.navbar-nav
                      li.active
                          a(href='/') Home
                      li
                          a(href='#') Category
                      li
                          a(href='#') Author
                      li
                          a(href='#') Translate Team
                  form.navbar-form.navbar-left(action='/search', method='get')
                      .input-group
                          input.form-control(type='text', style='min-width: 21vw', name='keyword', placeholder='Search manga name, author, translate team, ...')
                          .input-group-btn
                              button.btn.btn-default(type='submit')
                                  i.glyphicon.glyphicon-search
                  ul.nav.navbar-nav.navbar-right
                      if user != null
                          li.dropdown
                              a.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-haspopup='true')
                                  span.glyphicon.glyphicon-user
                                  |  Account
                                  span.caret
                              ul.dropdown-menu
                                  li.dropdown-header Account
                                  li
                                      a(href='./users') Profile
                                  li
                                      a(href='./login/sign-out') Logout
                                  li.divider
                                  li.dropdown-header Content Publisher
                                  li
                                      a(href='#') Manga
                                  li
                                      a(href='#') Your team
                                  li
                                      a(href='#') Your artist page
                      else
                          li
                              a(href='./login')
                                  span.glyphicon.glyphicon-user
                                  |  Login1 / Register

      block content
    script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(type='text/javascript', src='/javascripts/jvs.js')


